@model SaaS_RMS.Models.Entities.Landing.LandingInfo

@{
    ViewData["Title"] = "Restaurants";
    Layout = "~/Views/Shared/LandingLayout/_LandingLayout.cshtml";
}

<style>
    .text_center {
        text-align: center;
        color: orangered;
    }

    .select_height {
        height: 150px;
    }

    .fill_restaurant_height {
        height: 70%;
    }

    .Myjumbotron {
        padding: 2rem 1rem;
        margin-bottom: 2rem;
        background-color: #e9ecef;
        opacity: 0.5;
        border-radius: .3rem
    }

        .Myjumbotron:hover {
            opacity: 1;
        }

    .pad {
        padding-top: 8px;
    }
</style>

<div class="form-horizontal form-label-left">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="main_slider" style="background-image: url('/uploadsLogo/@Html.DisplayFor(model => model.Image)'); ">
        <div class="container fill_height">
            <div class="row align-items-center fill_height">
                <div class="container">
                    <h1 class="text_center">
                        Order delicious food online!
                    </h1>
                    <h3 class="text_center">
                        Discover local restaurants that deliver to your doorstep
                    </h3>
                    <div class="Myjumbotron row">
                        <div class="col-md-4 pad">
                            <select class="form-control" style="height:49px;" asp-items="ViewBag.StateId" id="state"></select>
                        </div>
                        <div class="col-md-4 pad">
                            <select class="form-control" style="height:49px;" id="lga"></select>
                        </div>
                        <div class="col-md-4 pad">
                            <input onclick="getRestaurants()" value="FIND RESTAURANTS" class="btn btn-lg btn-block btn-primary" />
                        </div>
                        <div class="col-md-4 pad">
                            <select class="form-control" style="height:49px;" id="restaurant"></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/Landing/js/jquery-3.2.1.min.js"></script>
    <script>
        $(document).ready(function () {
            if ($('#state').val() != '') {
                getLGAs();
            }

            $('#state').on('input', function () {
                getLGAs();
            });

            function getLGAs() {
                $('#lga').children("option").remove();
                $.ajax({
                    type: 'GET',
                    url: '/Home/GetLgasForState',
                    dataType: 'json',
                    data: { id: $('#state').val() },
                    success: function (lga) {
                        console.log(lga);
                        $.each(lga, function (i, lga) {
                            $('#lga').append('<option value="' + lga.lgaId + '">' + lga.name + '</option>');
                        });
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            }

            var GetAllRestaurantsWithLGA = function (id) {
                $.ajax({
                    type: 'GET',
                    url: '/Home/GetAllRestaurantsWithLGA',
                    data: { id: id },
                    async: true,
                    success: function (data) {
                        console.log(data);
                        for (var i = 0; i < data.length; i++) {
                            var restaurant = '<div class="product-item men"><div class="product discount product_filter"><div class="product_image">' +
                                '<img src="/uploads/' + data[i].image + '" alt=""></div><div class="favorite favorite_left"></div><div class="product_info">' +
                                '<h6 class="product_name"><a href="">' + data[i].name + '</a></h6>' +
                                '<div class="product_price">N' + data[i].amount + '<span></span></div></div></div>' +
                                '<div class="red_button add_to_cart_button"><a href="@Url.Action("Cart", "Shop")">Add To Cart</a></div></div>';
                            $('#restaurants_list').append(restaurant);
                        }
                    }
                });
            }


