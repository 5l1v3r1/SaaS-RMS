<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Authentication/assets/css/bootstrap.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Authentication/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Authentication/assets/css/style.css" rel="stylesheet">
    <link href="~/Authentication/assets/css/style-responsive.css" rel="stylesheet">


