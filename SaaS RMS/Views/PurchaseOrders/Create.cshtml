@model SaaS_RMS.Models.Entities.Inventory.PurchaseOrder

@{
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
    ViewData["Title"] = "Create";
}

<style>
    .centerlizer {
        text-align: center;
    }
</style>

<div class="page-title">
    <div class="title_left">
        <h3><strong> ADD PURCHASE ORDER</strong></h3>
    </div>
</div>

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProductDetailId" />
                        <div class="row">
                            <div class="control-label centerlizer col-md-2">
                                <label class="control-label">Prdouct</label>
                            </div>
                            <div class="col-md-10">
                                <select asp-for="ProductDetailId" id="stockdetail" class="form-control" asp-items="ViewBag.ProductDetails"></select>
                                <span asp-validation-for="ProductDetail" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="control-label centerlizer col-md-2">
                                <label class="control-label"> Mode</label>
                            </div>
                            <div class="col-md-10">
                                <select asp-for="Mode" class="form-control" asp-items="new SelectList(Enum.GetValues(typeof(SaaS_RMS.Models.Enums.PaymentMode)))"></select>
                                <span asp-validation-for="Mode" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="control-label centerlizer col-md-2">
                                <label class="control-label">Quantity</label>
                            </div>
                            <div class="col-md-10">
                                <input asp-for="Quantity" id="quantity" class="form-control" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="control-label centerlizer col-md-2">
                                <label class="control-label" asp-for="TotalPrice"></label>
                            </div>
                            <div class="col-md-10">
                                <input asp-for="TotalPrice" id="totalprice" class="form-control" />
                                <span asp-validation-for="TotalPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="control-label centerlizer col-md-2">
                                <label class="control-label" asp-for="Payment"></label>
                            </div>
                            <div class="col-md-10">
                                <input asp-for="Payment" id="totalprice" class="form-control" />
                                <span asp-validation-for="Payment" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="control-label centerlizer col-md-2">
                                <label class="control-label" asp-for="DueDate"></label>
                            </div>
                            <div class="col-md-10">
                                <input asp-for="DueDate" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="control-label centerlizer col-md-2">
                                <label class="control-label" asp-for="Description"></label>
                            </div>
                            <div class="col-md-10">
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row pull-right">
                            <div class="col-md-12">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a class="btn btn-danger" asp-action="Index">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}