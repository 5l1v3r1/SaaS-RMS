@model SaaS_RMS.Models.Entities.Inventory.Purchase

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<!--MODAL HEADER-->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3> <strong> ADD PURCHASE</strong> </h3>
</div>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!--MODAL BODY-->
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="row">
                <div class="control-label col-md-2">
                    <label> Stock</label>
                </div>
                <div class="col-md-10">
                    <select asp-for="StockDetailId" id="stockdetail" class="form-control" asp-items="ViewBag.Product"></select>
                    <span asp-validation-for="StockDetail" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-2">
                    <label asp-for="Mode" class="control-label"></label>
                </div>
                <div class="col-md-10">
                    <select asp-for="Mode" class="form-control"></select>
                    <span asp-validation-for="Mode" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-2">
                    <label asp-for="Quantity" class="control-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="Quantity" id="quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-2">
                    <label asp-for="TotalPrice" class="control-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="TotalPrice" id="totalprice" class="form-control" />
                    <span asp-validation-for="TotalPrice" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-2">
                    <label asp-for="DueDate" class="control-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="DueDate" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <!--MODAL FOOTER-->
    <div class="modal-footer">
        <div class="row pull-right">
            <div class="col-md-12">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            if ($('#stockdetail').val() != '') {
                getAmount();
            }
            $('#stockdetail').on('input', function () {
                getAmount();
            });

            function getAmount() {
                $('#totalprice').childern("option").remove();
                $.ajax({
                    type: 'GET',
                    url: '/Purchases/GetAmountForStock',
                    dataType: 'json',
                    data: { id: $('#stockdetail').val() },
                    success: function (amount) {
                        console.log(amount);
                        $('input').keyup(function () {
                            var quantity = parseFloat($('#quantity').val());
                            var amountforone = parseFloat($(amount).val());
                            $('#totalprice').html(quantity * amountforone);
                        });
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            }
        });
    </script>
}
