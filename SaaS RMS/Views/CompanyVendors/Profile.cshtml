@model SaaS_RMS.Models.Entities.Vendor.CompanyVendor

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/VendorLayout/_VendorLayout.cshtml";
}

<style>
    .centerlizer {
        text-align: center;
    }
</style>

<div class="page-title">
    <div class="title_left">
        <h3><strong> EDIT PROFILE </strong></h3>
    </div>
</div>

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <form asp-action="Profile" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CompanyVendorId" />
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="control-label centerlizer col-md-2">
                                <label class="control-label " asp-for="Name"></label>
                            </div>
                            <div class="col-md-10">
                                <input asp-for="Name" class="form-control " />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="control-label col-md-2">
                                <label>Contact Number</label>
                            </div>
                            <div class="col-md-10">
                                <input asp-for="ContactNumber" class="form-control " />
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="control-label col-md-2">
                                <label>Office Number</label>
                            </div>
                            <div class="col-md-10">
                                <input asp-for="OfficeNumber" class="form-control " />
                                <span asp-validation-for="OfficeNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="control-label col-md-2">
                                <label asp-for="Address"></label>
                            </div>
                            <div class="col-md-10">
                                <textarea asp-for="Address" class="form-control "></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="control-label col-md-2">
                                <label>What do you offer</label>
                            </div>
                            <div class="col-md-10">
                                <textarea asp-for="VendorItem" class="form-control"></textarea>
                                <span asp-validation-for="VendorItem" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row pull-right">
                        <div class="col-md-12">
                            <input type="submit" value="Update" class="btn btn-primary" />
                            <a class="btn btn-danger" asp-action="Dashboard">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}