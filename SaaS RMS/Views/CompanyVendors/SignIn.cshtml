@model SaaS_RMS.Models.Entities.Vendor.CompanyVendor

@{
    ViewData["Title"] = "SignIn";
}

<form class="form-login" asp-action="SignIn" role="form">
    <h2 class="form-login-heading"> VENDOR SIGN IN </h2>
    @if (ViewData["mismatch"] != null && Convert.ToString(ViewData["mismatch"]) != " ")
    {
        <h5 style="padding-left:1em;" class="text-danger">@ViewData["mismatch"]</h5>
    }
        <div class="login-wrap">
            <input asp-for="Name" type="text" class="form-control" placeholder="Vendor Name" autofocus />
            <br />

            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>


            <input asp-for="Address" type="text" hidden />
            <input asp-for="ContactNumber" type="text" hidden />
            <input asp-for="CompanyVendorId" type="text" hidden />
            <input asp-for="OfficeNumber" type="text" hidden />
            <input asp-for="VendorItem" type="text" hidden />
            <input asp-for="Request" type="text" hidden />
            <input asp-for="ConfirmPassword" type="text" hidden />


