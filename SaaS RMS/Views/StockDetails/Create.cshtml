@model SaaS_RMS.Models.Entities.Inventory.StockDetail

@{
    ViewData["Title"] = "Create";
}

<!--MODAL HEADER-->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3> <strong> ADD A STOCK DETAIL </strong> </h3>
</div>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!--MODAL BODY-->
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="row">
                <div class="control-label col-md-2">
                    <label>Category</label>
                </div>
                <div class="col-md-10">
                    <select class="form-control" asp-items="ViewBag.CategoryId" id="category"></select>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-2">
                    <label>Product</label>
                </div>
                <div class="col-md-10">
                    <select asp-for="ProductId" class="form-control" id ="product"></select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-2">
                    <label>Vendor</label>
                </div>
                <div class="col-md-10">
                    <select asp-for="VendorId" class="form-control" asp-items="ViewBag.VendorId"></select>
                    <span asp-validation-for="VendorId" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-2">
                    <label>Buying Rate</label>
                </div>
                <div class="col-md-10">
                    <input asp-for="Amount" class="form-control " />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-2">
                    <label>Measurement</label>
                </div>
                <div class="col-md-10">
                    <input asp-for="Meaurement" class="form-control " />
                    <span asp-validation-for="Meaurement" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <!--MODAL FOOTER-->
    <div class="modal-footer">
        <div class="row pull-right">
            <div class="col-md-12">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/Landing/js/jquery-3.2.1.min.js"></script>
    <script>
        $(document).ready(function () {
            if ($('#category').val() != '') {
                getProducts();
            }

            $('#category').on('input', function () {
                getProducts();
            });

            function getProducts() {
                $('#product').children("option").remove();
                $.ajax({
                    type: 'GET',
                    url: '/StockDetails/GetProductsForCategory',
                    dataType: 'json',
                    data: { id: $('#category').val() },
                    success: function (product) {
                        console.log(product);
                        $.each(product, function (i, product) {
                            $('#product').append('<option value="' + product.ProductId + '">' + product.Name + '</option>');
                        });
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            }
        });
    </script>
}
