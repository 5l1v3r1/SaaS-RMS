@model IEnumerable<SaaS_RMS.Models.Entities.System.Package>
@{
    ViewData["Title"] = "Package";
    Layout = "~/Views/Shared/SubscriptionLayout/_SubscriptionLayout.cshtml";
}

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <h3 style="font-size:medium; color:red; text-align:center">
                    <strong>
                        Sorry your system has been locked because your subscription has expired. <br />
                        Do view our packages below and select pacakge and subscribe to a plan to continue using this system
                    </strong>
                </h3>
            </div>
        </div>
    </div>
</div>
<div class="" role="main">
    <div class="">

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel" style="height:600px;">
                    <div class="x_title">
                        <h2>Welcome to the RMS PACKAGES</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- price element -->
                                @foreach (var item in Model)
                                {
                                    <div class="col-md-4 col-sm-6 col-xs-12">

                                        <div class="pricing">
                                            <div class="title">
                                                <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                                                <h1>N @Html.DisplayFor(modelItem => item.Amount)</h1>
                                            </div>
                                            <div class="x_content">
                                                <div class="">
                                                    <div class="pricing_features">
                                                        <ul class="list-unstyled text-left">
                                                            <li><i class="fa fa-check text-success"></i> @Html.DisplayFor(modelItem => item.Description1)</li>
                                                            <li><i class="fa fa-check text-success"></i> @Html.DisplayFor(modelItem => item.Description2)</li>
                                                            <li><i class="fa fa-check text-success"></i> @Html.DisplayFor(modelItem => item.Description3)</li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="pricing_footer">
                                                    <a asp-action="Subscriptions" asp-controller="Restaurants" asp-route-id="@item.PackageId" 
                                                       class="btn btn-success btn-block" role="button">View<span> Subscriptions !!!</span></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

