@model SaaS_RMS.Models.Entities.System.Restaurant

@{
    ViewData["Title"] = "Access";
    Layout = "~/Views/Shared/AuthenticationLayout/_AuthenticationLayout.cshtml";
}

<form class="form-login" asp-action="Access" role="form" asp-controller="Restaurants">
    <h2 class="form-login-heading"> ACCESS DOOR </h2>
    @if (ViewData["mismatch"] != null && Convert.ToString(ViewData["mismatch"]) != " ")
    {
        <h5 style="padding-left:1em;" class="text-danger">@ViewData["mismatch"]</h5>
    }
    <div class="login-wrap">
        <input asp-for="Name" type="text" class="form-control" placeholder="Restaurant Name" autofocus />
        <br />

        <input asp-for="AccessCode" type="text" class="form-control" placeholder="Access Code" />
        <span asp-validation-for="AccessCode" class="text-danger"></span>
        <input asp-for="Location" type="text" hidden />
        <input asp-for="ContactEmail" type="text" hidden />
        <input asp-for="ContactNumber" type="text" hidden />
        <input asp-for="RestaurantId" type="text" hidden />

        @*<label class="checkbox">
                <span class="pull-right">
                    <a data-toggle="modal" href="login.html#myModal"> Forgot Password?</a
                </span>
            </label>*@
        <br />
        <button class="btn btn-theme btn-block" type="submit" value="Login"><i class="fa fa-lock"></i> ACCESS</button>
        <hr />

        @*<div class="login-social-link centered">
                <p>or you can sign in via your social network</p>
                <button class="btn btn-facebook"><i class="fa fa-facebook"></i> Facebook</button>
                <button class="btn btn-twitter"><i class="fa fa-twitter"></i> Twitter</button>
            </div>*@
        <div class="registration">
            Don't have a restaurant with RMS yet?<br />
            <a class="" asp-action="Register">
                Create an account
            </a>
        </div>
    </div>

</form>
