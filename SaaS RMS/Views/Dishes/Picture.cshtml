@model SaaS_RMS.Models.Entities.Restuarant.Dish

@{
    ViewData["Title"] = "Picture";
}

<!--MODAL HEADER-->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3> <strong> PICTURE OF DISH </strong> </h3>
</div>

<!--MODAL BODY-->
<div class="modal-body">
    <div class="form-horizontal">
        <img style="max-width:100%; max-height:100%; text-align:center; display: block; margin-left: auto; margin-right: auto; width: 100%;" src="~/uploadsLogo/@Html.DisplayFor(model => model.Image)" />
    </div>
</div>

<!--MODAL FOOTER-->
<div class="modal-footer">
    <div class="row pull-right">
        <div class="col-md-12">
            <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}