@model SaaS_RMS.Models.Entities.Inventory.PurchaseOrder

@{
    ViewData["Title"] = "Create";
}

<!--MODAL HEADER-->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3> <strong> ADD PURCHASE</strong> </h3>
</div>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!--MODAL BODY-->
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="row">
                <div class="control-label col-md-3">
                    <label> Stock</label>
                </div>
                <div class="col-md-9">
                    <select asp-for="ProductDetailId" id="stockdetail" class="form-control" asp-items="ViewBag.ProductDetails"></select>
                    <span asp-validation-for="ProductDetail" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-3">
                    <label asp-for="Mode" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <select asp-for="Mode" class="form-control" asp-items="new SelectList(Enum.GetValues(typeof(SaaS_RMS.Models.Enums.PaymentMode)))"></select>
                    <span asp-validation-for="Mode" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-3">
                    <label asp-for="Quantity" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <input asp-for="Quantity" id="quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-3">
                    <label asp-for="TotalPrice" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <input asp-for="TotalPrice" id="totalprice" class="form-control" />
                    <span asp-validation-for="TotalPrice" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-3">
                    <label asp-for="DueDate" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <input asp-for="DueDate" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <!--MODAL FOOTER-->
    <div class="modal-footer">
        <div class="row pull-right">
            <div class="col-md-12">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}